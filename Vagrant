#cria o arquivo VagrantFIle da distro solicitada
vagrant init centos/7

#editar arquivo VagrantFile
vim VagrantFile
#descomenta a linha abaixo.
config.vm.network "public_network"

#cria/habilita a VM no hypervisor
vagrant up 

#acessa via ssh a VM criada
vagrant ssh

#desliga a VM criada
vagrant halt 

#Elimina a VM criada
vagrant destroy
